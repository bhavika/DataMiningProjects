# converting every odd space to a tab

def find_spaces(character, line):
    space_pos = []
    for i in range(len(line)):
        if character == line[i] and i%2 != 0:
            space_pos.append(i)
    return space_pos


with open('../data/input.txt') as f:
    with open('../data/input_new.txt', 'w') as newf:
        for line in f:
            space_pos = find_spaces(' ', line)
            print(space_pos)
            for s in space_pos:
                newline = line.replace(line[s], '\t')
                newf.write(newline)





